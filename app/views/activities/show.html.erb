<table class="activity-table">
<thead>
<tr>
  <th>Date</th>
  <th>Type</th>
  <th>Description</th>
  <th>Amount</th>
</tr>
</thead>
<tbody>
<% @activities.each do |activity| %>
	<tr>
	  <td><%= activity.created_at.strftime("%m/%d/%Y") %></td>
    <td><%= activity.kind %></td>
    <td><%= activity.desc %></td>
    <td><%= activity.amount %></td>
  </tr>
<% end %>
</tbody>
<tfoot>
  <tr>
    <td></td>
    <td></td>
    <td>Balance:</td>
    <td>One Billion $$</td>
  </tr>
</tfoot>
</table>